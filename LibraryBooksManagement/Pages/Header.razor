﻿
@inject NavigationManager NavigationManager
<div class="control-container">
    <SfAppBar ColorMode="AppBarColor.Primary">
        <span class="e-icons e-user-defined fs-1 text-warning"></span>
        <span class="regular">Library Books Management</span>
        <AppBarSpacer></AppBarSpacer>
        <SfButton CssClass="e-inherit" IconCss="e-icons e-repeat" Content="Refresh" OnClick="NavigateToRefresh"></SfButton>
        <SfButton CssClass="e-inherit" IconCss="e-icons e-print-layout" Content="Add Book" OnClick="NavigateToAddBook"></SfButton>
    </SfAppBar>
</div>
@code {

    private void Navigate(string link)
    {
        NavigationManager.NavigateTo(link, true);
    }
    private void NavigateToAddBook()
    {
        NavigationManager.NavigateTo("addbook");
    }
    private void NavigateToRefresh()
    {
        NavigationManager.NavigateTo("/");
    }
   
}
